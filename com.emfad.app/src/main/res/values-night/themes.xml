<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme for the application -->
    <style name="Theme.EMFADAnalyzer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material3 dark color scheme -->
        <item name="colorPrimary">@color/emfad_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/emfad_primary_dark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        
        <item name="colorTertiary">@color/emfad_accent</item>
        <item name="colorOnTertiary">@color/black</item>
        
        <item name="colorError">@color/emfad_error</item>
        <item name="colorOnError">@color/black</item>
        
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        
        <!-- Status bar color for dark theme -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>
