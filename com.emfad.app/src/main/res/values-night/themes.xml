<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme for the application using AppCompat -->
    <style name="Theme.EMFADAnalyzer" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/emfad_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/emfad_accent</item>

        <!-- Background colors for dark theme -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>

        <!-- Text colors for dark theme -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

        <!-- Status bar color for dark theme -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>
