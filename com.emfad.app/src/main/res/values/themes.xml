<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using AppCompat for compatibility -->
    <style name="Theme.EMFADAnalyzer" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/emfad_primary</item>
        <item name="colorPrimaryDark">@color/emfad_primary_dark</item>
        <item name="colorAccent">@color/emfad_accent</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/emfad_background</item>
        <item name="colorSurface">@color/emfad_surface</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/emfad_primary_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>
